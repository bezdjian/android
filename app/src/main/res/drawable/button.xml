<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f51b5" />
            <gradient android:angle="-180" android:startColor="#efefef" android:endColor="#eeffef"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#151515" />
            <solid android:color="#efefef"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f51b5" />
            <gradient android:angle="-180" android:startColor="#3f51b5" android:endColor="#3f51b5" />
        </shape>
    </item>
</selector>